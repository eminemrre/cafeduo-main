# ==========================================
# CafeDuo Environment Configuration
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# Frontend Build Configuration (Vite)
# Keep empty for same-domain reverse proxy setup (/api and /socket.io).
# Set full URL (https://api.example.com) for split frontend/backend deployments.
VITE_API_BASE_URL=
VITE_SOCKET_URL=
VITE_GOOGLE_CLIENT_ID=
VITE_APP_BASE_URL=

# ==========================================
# Database Configuration
# ==========================================
# Production: Use DATABASE_URL
# Local Dev: Use individual variables
DATABASE_URL=postgres://postgres:password@localhost:5432/cafeduo

# Alternative DB Config (fallback)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=cafeduo
DB_PASSWORD=password
DB_PORT=5432

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# ==========================================
# Redis Configuration
# ==========================================
# Local Dev: redis://localhost:6379
# Docker: redis://redis:6379
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# ==========================================
# Security Configuration
# ==========================================
# IMPORTANT: Change this to a strong random string in production!
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
TRUST_PROXY=1

# Bcrypt
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=600
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=600
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_LOGIN_RATE_LIMIT_MAX_REQUESTS=20
AUTH_REGISTER_RATE_LIMIT_MAX_REQUESTS=10
AUTH_GOOGLE_RATE_LIMIT_MAX_REQUESTS=30
AUTH_FORGOT_PASSWORD_RATE_LIMIT_MAX_REQUESTS=6
AUTH_RESET_PASSWORD_RATE_LIMIT_MAX_REQUESTS=12
RATE_LIMIT_STORE=redis
RATE_LIMIT_REDIS_PREFIX=cafeduo:ratelimit
RATE_LIMIT_PASS_ON_STORE_ERROR=true

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ==========================================
# Google OAuth (Optional)
# ==========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==========================================
# reCAPTCHA (Optional but recommended)
# ==========================================
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@cafeduo.com
PASSWORD_RESET_TOKEN_TTL_MINUTES=30

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
REQUEST_LOG_SLOW_MS=1200

# ==========================================
# Reverse Proxy / Domain (VPS + Caddy)
# ==========================================
SITE_ADDRESS=
ACME_EMAIL=
APP_BASE_URL=http://localhost:5173

# ==========================================
# Feature Flags
# ==========================================
ENABLE_GOOGLE_AUTH=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RECAPTCHA=false
