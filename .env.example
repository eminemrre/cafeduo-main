# ==========================================
# CafeDuo Environment Configuration
# ==========================================

# Firebase Configuration
# IMPORTANT: Never commit real API keys! Copy this file to .env and fill in your values
# Get these from: Firebase Console → Project Settings → General → Your apps → Web app
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# ==========================================
# Database Configuration
# ==========================================
# Production: Use DATABASE_URL
# Local Dev: Use individual variables
DATABASE_URL=postgres://postgres:password@localhost:5432/cafeduo

# Alternative DB Config (fallback)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=cafeduo
DB_PASSWORD=password
DB_PORT=5432

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# Security Configuration
# ==========================================
# IMPORTANT: Change this to a strong random string in production!
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ==========================================
# Google OAuth (Optional)
# ==========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==========================================
# reCAPTCHA (Optional but recommended)
# ==========================================
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@cafeduo.com

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ==========================================
# Feature Flags
# ==========================================
ENABLE_GOOGLE_AUTH=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RECAPTCHA=false
