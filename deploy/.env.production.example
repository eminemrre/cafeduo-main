# Domain and TLS
SITE_ADDRESS=cafeduo.example.com
ACME_EMAIL=ops@example.com

# App security
JWT_SECRET=replace-with-strong-random-secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
TRUST_PROXY=1

# Database
DB_USER=postgres
DB_PASSWORD=change-me
DB_NAME=cafeduo
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# API runtime
CORS_ORIGIN=https://cafeduo.example.com,https://www.cafeduo.example.com
# Global API limiter
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=600
# Legacy compatibility (optional, can be removed)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=600
# Auth-specific brute-force protection
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_LOGIN_RATE_LIMIT_MAX_REQUESTS=20
AUTH_REGISTER_RATE_LIMIT_MAX_REQUESTS=10
# Distributed limiter store
RATE_LIMIT_STORE=redis
RATE_LIMIT_REDIS_PREFIX=cafeduo:ratelimit
RATE_LIMIT_PASS_ON_STORE_ERROR=true
LOG_LEVEL=info
REQUEST_LOG_SLOW_MS=1200

# Frontend build-time vars
# Keep empty if Caddy serves web and API from the same domain.
# Fill with https://api.example.com for split frontend/backend hosting.
VITE_API_BASE_URL=
VITE_SOCKET_URL=
APP_VERSION=
APP_BUILD_TIME=

# Optional integrations
# Google OAuth (Client ID from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=584645811147-nhnquccakum7g0pias4kj4o8rda7udd2.apps.googleusercontent.com
GOOGLE_CLIENT_ID=584645811147-nhnquccakum7g0pias4kj4o8rda7udd2.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# reCAPTCHA (Site Key and Secret Key from reCAPTCHA Admin Console)
RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY_HERE
RECAPTCHA_SECRET_KEY=YOUR_RECAPTCHA_SECRET_KEY_HERE

# Email Configuration (SMTP credentials from your email provider)
SMTP_HOST=YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USER=YOUR_SMTP_USER
SMTP_PASS=YOUR_SMTP_PASSWORD
SMTP_FROM=noreply@cafeduotr.com
