{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": ["jest", "@testing-library/jest-dom", "node", "vite/client"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "App.tsx",
    "index.tsx",
    "types.ts",
    "constants.ts",
    "env.d.ts",
    "global.d.ts",
    "components",
    "hooks",
    "contexts",
    "lib",
    "vite.config.ts",
    "test-setup.ts",
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
